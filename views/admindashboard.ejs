<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Manage Question Papers</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    .dropdown {
      position: relative;
      display: inline-block;
    }
    .dropdown-menu {
      display: none;
      position: absolute;
      right: 0;
      background-color: white;
      min-width: 120px;
      box-shadow: 0 2px 8px rgb(0 0 0 / 0.15);
      border-radius: 0.375rem;
      z-index: 10;
    }
    .dropdown-menu.show {
      display: block;
    }
    .dropdown-menu button {
      width: 100%;
      padding: 0.5rem 1rem;
      text-align: left;
      font-size: 0.9rem;
      color: #374151;
      background: none;
      border: none;
      cursor: pointer;
    }
    .dropdown-menu button:hover {
      background-color: #e5e7eb;
    }
  </style>
</head>
<body class="bg-gray-100 min-h-screen p-6">

<div class="max-w-3xl mx-auto space-y-10">

  <form action="/question-papers/submit" method="POST" class="bg-white p-8 rounded-lg shadow-md w-full space-y-6" novalidate>
    <h2 class="text-2xl font-semibold mb-4 text-gray-800 text-center"><%= editPaper ? "Edit Question Paper" : "Upload Question Paper" %></h2>

    <% if (error) { %>
      <p class="text-red-600 font-medium text-center mb-4"><%= error %></p>
    <% } %>

    <% if (editPaper) { %>
      <input type="hidden" name="id" value="<%= editPaper._id %>" />
    <% } %>

    <div>
      <label for="name" class="block mb-1 font-medium text-gray-700">Name</label>
      <input
        id="name"
        name="name"
        type="text"
        required
        placeholder="Question Paper Name"
        value="<%= editPaper ? editPaper.name : '' %>"
        class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
    </div>

    <div>
      <label for="semester" class="block mb-1 font-medium text-gray-700">Semester</label>
      <select
        id="semester"
        name="semester"
        required
        class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
      >
        <option value="" disabled <%= !editPaper ? 'selected' : '' %>>Select Semester</option>
        <% for(let i=1; i<=8; i++) { %>
          <option value="<%= i %>" <%= editPaper && editPaper.semester == i ? 'selected' : '' %>><%= i %></option>
        <% } %>
      </select>
    </div>

    <div>
      <label for="year" class="block mb-1 font-medium text-gray-700">Year</label>
      <select
        id="year"
        name="year"
        required
        class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
      >
        <option value="" disabled <%= !editPaper ? 'selected' : '' %>>Select Year</option>
        <option value="1" <%= editPaper && editPaper.year == 1 ? 'selected' : '' %>>1st Year</option>
        <option value="2" <%= editPaper && editPaper.year == 2 ? 'selected' : '' %>>2nd Year</option>
        <option value="3" <%= editPaper && editPaper.year == 3 ? 'selected' : '' %>>3rd Year</option>
        <option value="4" <%= editPaper && editPaper.year == 4 ? 'selected' : '' %>>4th Year</option>
      </select>
    </div>

    <div>
      <label for="department" class="block mb-1 font-medium text-gray-700">Department</label>
      <select
        id="department"
        name="department"
        required
        class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
      >
        <option value="" disabled <%= !editPaper ? 'selected' : '' %>>Select Department</option>
        <option value="Computer Science and Engineering" <%= editPaper && editPaper.department === 'Computer Science and Engineering' ? 'selected' : '' %>>Computer Science and Engineering</option>
                <option value="Computer Science and Design" <%= editPaper && editPaper.department === 'Computer Science and Design' ? 'selected' : '' %>>Computer Science and Design</option>
                        <option value="Artificial Intelligence and Data Science" <%= editPaper && editPaper.department === 'Artificial Intelligence and Data Science' ? 'selected' : '' %>>Artificial Intelligence and Data Science</option>
        <option value="Mechanical Engineering" <%= editPaper && editPaper.department === 'Mechanical Engineering' ? 'selected' : '' %>>Mechanical Engineering</option>
        <option value="Civil Engineering" <%= editPaper && editPaper.department === 'Civil Engineering' ? 'selected' : '' %>>Civil Engineering</option>
        <option value="Electrical Engineering" <%= editPaper && editPaper.department === 'Electrical Engineering' ? 'selected' : '' %>>Electrical Engineering</option>
        <option value="Electronics and Computer Engineering" <%= editPaper && editPaper.department === 'Electronics and Computer Engineering' ? 'selected' : '' %>>Electronics and Computer Engineering</option>
        <option value="Agriculture Engineering" <%= editPaper && editPaper.department === 'Agriculture Engineering' ? 'selected' : '' %>>Agriculture Engineering</option>
        <option value="Plastic and Polymer" <%= editPaper && editPaper.department === 'Plastic and Polymer' ? 'selected' : '' %>>Plastic and Polymer</option>
      </select>
    </div>

    <div>
      <label for="type" class="block mb-1 font-medium text-gray-700">Type</label>
      <select
        id="type"
        name="type"
        required
        class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
      >
        <option value="" disabled <%= !editPaper ? 'selected' : '' %>>Select Type</option>
        <option value="ESE" <%= editPaper && editPaper.type === 'ESE' ? 'selected' : '' %>>ESE</option>
        <option value="MSE" <%= editPaper && editPaper.type === 'MSE' ? 'selected' : '' %>>MSE</option>
        <option value="Backlog" <%= editPaper && editPaper.type === 'Backlog' ? 'selected' : '' %>>Backlog</option>
        <option value="Makeup" <%= editPaper && editPaper.type === 'Makeup' ? 'selected' : '' %>>Makeup</option>
      </select>
    </div>

    <div>
      <label for="driveLink" class="block mb-1 font-medium text-gray-700">Drive Link</label>
      <input
        id="driveLink"
        name="driveLink"
        type="url"
        required
        placeholder="https://drive.google.com/..."
        pattern="https://drive\.google\.com/.*"
        title="Please enter a valid Google Drive link starting with https://drive.google.com/"
        value="<%= editPaper ? editPaper.driveLink : '' %>"
        class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
    </div>

    <div>
      <label for="uploadedBy" class="block mb-1 font-medium text-gray-700">Uploaded By</label>
      <input
        id="uploadedBy"
        name="uploadedBy"
        type="text"
        readonly
        value="<%= editPaper ? editPaper.uploadedBy : 'Admin' %>"
        class="w-full px-4 py-2 border rounded-md bg-gray-200 cursor-not-allowed"
      />
    </div>

    <button
      type="submit"
      class="w-full bg-blue-600 text-white py-3 rounded-md hover:bg-blue-700 transition"
    >
      <%= editPaper ? "Update Question Paper" : "Upload Question Paper" %>
    </button>
  </form>

  <hr class="my-8 border-gray-300" />

  <section>
    <h3 class="text-xl font-semibold mb-4 text-gray-800">Uploaded Question Papers</h3>
    <div id="papers-list" class="space-y-4">
      <% if (papers.length === 0) { %>
        <p class="text-gray-500 italic">No question papers uploaded yet.</p>
      <% } else { %>
        <% papers.forEach(paper => { %>
          <div class="bg-white p-5 rounded-lg shadow flex justify-between items-start">
            <div class="space-y-1 max-w-[80%]">
              <h4 class="text-lg font-semibold text-gray-900"><%= paper.name %></h4>
              <p class="text-gray-700 text-sm">
                Semester: <strong><%= paper.semester %></strong>,
                Year: <strong><%= paper.year %> <%= paper.year === 1 ?'st' : paper.year === 2 ?'nd' : paper.year === 3 ?'rd' : 'th' %> Year</strong>,
                Department: <strong><%= paper.department %></strong>
              </p>
              <p class="text-gray-700 text-sm">
                Type: <strong><%= paper.type %></strong>
              </p>
              <p class="text-gray-700 text-sm">
                Uploaded By: <strong><%= paper.uploadedBy %></strong>,
                On: <strong><%= paper.createdAt.toLocaleDateString('en-US', { year:'numeric', month:'short', day:'numeric' }) %></strong>
              </p>
              <p class="text-blue-600 text-sm hover:underline break-all">
                <a href="<%= paper.driveLink %>" target="_blank" rel="noopener noreferrer">Drive Link</a>
              </p>
            </div>
            <div class="relative dropdown">
              <button class="p-2 rounded hover:bg-gray-200" aria-label="More options" onclick="toggleDropdown(event)">
                <!-- three dots icon -->
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="5" r="1.5" />
                  <circle cx="12" cy="12" r="1.5" />
                  <circle cx="12" cy="19" r="1.5" />
                </svg>
              </button>
              <div class="dropdown-menu rounded shadow-md bg-white">
                <a href="/question-papers/edit/<%= paper._id %>" class="block px-4 py-2 hover:bg-gray-100 cursor-pointer">Edit</a>
                <form action="/question-papers/delete/<%= paper._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this question paper?');">
                  <button type="submit" class="w-full text-left px-4 py-2 text-red-600 hover:bg-gray-100 cursor-pointer">Delete</button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </section>
</div>

<script>
  // Dropdown toggle script
  function toggleDropdown(event) {
    event.stopPropagation();
    closeAllDropdowns();

    const menu = event.currentTarget.nextElementSibling;
    menu.classList.toggle('show');
  }

  function closeAllDropdowns() {
    document.querySelectorAll('.dropdown-menu.show').forEach(menu => {
      menu.classList.remove('show');
    });
  }

  window.addEventListener('click', () => {
    closeAllDropdowns();
  });
</script>

</body>
</html>
