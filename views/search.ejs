<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Previous Year Papers</title>
   <link rel="icon" type="image/png" href="../public/images/Gb.png">
  <script src="https://cdn.tailwindcss.com"></script>
</head> <!-- Google Fonts: Poppins -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            poppins: ['Poppins', 'sans-serif']
          },
        }
      }
    }
  </script>
</head>
<body class="font-poppins text-white min-h-screen bg-cover bg-center bg-fixed" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('./images/bg.jpg');">

  <!-- Header -->
   <%- include('components/header') %>

  <!-- Content Box -->
  <main class="max-w-5xl mx-auto mt-12 bg-gray-800 bg-opacity-80 p-8 rounded-2xl shadow-xl">
    <h2 class="text-3xl font-bold mb-6">Find Your Papers</h2>
    <p class="mb-8 text-gray-300">Select department, year, and paper type to get started.</p>

    <!-- Dropdowns -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <select class="bg-gray-700 text-white border border-gray-600 rounded-lg p-3 focus:ring-2 focus:ring-blue-500">
        <option>Select Department</option>
        <option>CSE</option>
        <option>AIDS</option>
        <option>CSD</option>
        <option>ECE</option>
      </select>

      <select class="bg-gray-700 text-white border border-gray-600 rounded-lg p-3 focus:ring-2 focus:ring-blue-500">
        <option>Select Year</option>
        <option>1st Year</option>
        <option>2nd Year</option>
        <option>3rd Year</option>
        <option>4th Year</option>
      </select>

      <select class="bg-gray-700 text-white border border-gray-600 rounded-lg p-3 focus:ring-2 focus:ring-blue-500">
        <option>Select Paper Type</option>
        <option>ISE</option>
        <option>ENDSEM</option>
        <option>MAKEUP</option>
        <option>BACKLOG</option>
      </select>

      <select class="bg-gray-700 text-white border border-gray-600 rounded-lg p-3 focus:ring-2 focus:ring-blue-500">
        <option>Select Subject</option>
        <option>ISE</option>
        <option>ENDSEM</option>
        <option>MAKEUP</option>
        <option>BACKLOG</option>
      </select>
    </div>

    <!-- Get Started Button -->
    <div class="text-center mb-10">
      <button class="px-8 py-3 bg-blue-600 hover:bg-blue-700 rounded-lg shadow-lg text-lg font-semibold transition">
        Unlocked
      </button>
    </div>

    <!-- Sample Paper Card -->
    <div class="bg-gray-700 p-6 rounded-xl shadow-lg flex justify-between items-center">
      <div>
        <h3 class="text-xl font-bold">Sample Paper: Data Structures - ENDSEM 2023</h3>
        <p class="text-gray-300">Department: CSE | Year: 2nd | Type: ENDSEM</p>
      </div>
      <a href="#" class="px-5 py-2 bg-green-600 hover:bg-green-700 rounded-lg shadow-md text-white font-semibold transition">
        View
      </a>
    </div>
  </main>

</body>
</html>

</html>
